{
  "env": {
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": ["prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "eslint-plugin-jest"],
  "rules": {
    "no-unused-expressions": "off",
    "@typescript-eslint/no-unused-expressions": ["error"],
    "valid-jsdoc": 2
  }
}
